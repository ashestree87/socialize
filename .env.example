# Application Environment
APP_ENV=local
APP_DEBUG=true
APP_KEY=
APP_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=socialize
DB_USERNAME=socialize
DB_PASSWORD=secret
DB_ROOT_PASSWORD=secret

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
