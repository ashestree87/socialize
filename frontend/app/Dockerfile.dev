FROM node:18-alpine

WORKDIR /app

# Copy package files first to leverage Docker cache
COPY package*.json ./

# Install dependencies
RUN npm install

# The rest of the source code will be mounted as a volume
# No need to COPY the source code here

# Expose Vite's default development port
EXPOSE 5173

# Start Vite dev server
CMD ["npm", "run", "dev"] 